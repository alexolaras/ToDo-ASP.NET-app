    <div class="statistics">
        <h2>Statistici:</h2>
        <p>Procentaj răspunsuri "da": <span id="yesPercentage">0%</span></p>
        <p>Procentaj răspunsuri "nu": <span id="noPercentage">0%</span></p>
    </div>

    <form id="myForm">
        <button type="submit">Submit</button>
    </form>

    <script>
        // Funcție pentru actualizarea statisticilor
        function updateStatistics() {
            const yesCount = document.querySelectorAll('.yes.clicked').length;
            const noCount = document.querySelectorAll('.no.clicked').length;
            const totalCount = yesCount + noCount;

            const yesPercentage = totalCount > 0 ? (yesCount / totalCount * 100).toFixed(2) + '%' : '0%';
            const noPercentage = totalCount > 0 ? (noCount / totalCount * 100).toFixed(2) + '%' : '0%';

            document.getElementById('yesPercentage').textContent = yesPercentage;
            document.getElementById('noPercentage').textContent = noPercentage;
        }

        // Adaugă event listener pentru butoanele "yes" și "no"
        document.querySelectorAll('.yes, .no').forEach(button => {
            button.addEventListener('click', function () {
                this.classList.toggle('clicked');
                updateStatistics();
            });
        });

        // Funcție pentru a afișa mesajul la submit
        function showAlertByPercentage(event) {
            event.preventDefault();

            const yesCount = document.querySelectorAll('.yes.clicked').length;
            const noCount = document.querySelectorAll('.no.clicked').length;
            const totalCount = yesCount + noCount;

            const yesPercentage = totalCount > 0 ? (yesCount / totalCount * 100) : 0;

            if (yesPercentage >= 75) {
                alert("Nivelul de insecuritate este foarte ridicat, se recomanda de revizuid: " + yesPercentage.toFixed(2) + "%");
            } else if (yesPercentage >= 50) {
                alert("Nivelul de insecuritate mediu, se recomanda o usoara revizzuire: " + yesPercentage.toFixed(2) + "%");
            } else {
                alert("Bai, cate de cat norm, scazut: " + yesPercentage.toFixed(2) + "%");
            }
        }

        // Adaugă event listener pentru formularul de submit
        document.getElementById('myForm').addEventListener('submit', showAlertByPercentage);

    </script>
</body>








