    <!-- Buton de trimitere -->
    <button id="submit">Submit</button>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            let buttons = document.querySelectorAll('button');
            let submitButton = document.getElementById('submit');
            let responses = {};

            buttons.forEach(button => {
                if (button.className === 'yes' || button.className === 'no') {
                    button.addEventListener('click', function () {
                        let question = button.parentElement.querySelector('p').innerText;
                        responses[question] = {
                            answer: button.className,
                            recommendation: button.dataset.recommendation || ''
                        };

                        button.parentElement.querySelectorAll('button').forEach(btn => btn.classList.remove('clicked'));
                        button.classList.add('clicked');
                    });
                }
            });

            submitButton.addEventListener('click', function () {
                let allQuestionsAnswered = true;
                document.querySelectorAll('div').forEach(div => {
                    let question = div.querySelector('p').innerText;
                    if (!responses[question]) {
                        allQuestionsAnswered = false;
                    }
                });

                if (allQuestionsAnswered) {
                    let message = "Formular trimis cu succes!\n\n";
                    for (let question in responses) {
                        message += question + " - Răspuns: " + responses[question].answer;
                        if (responses[question].answer === 'no') {
                            message += "\n" + responses[question].recommendation;
                        }
                        message += "\n\n";
                    }
                    alert(message);
                } else {
                    alert("Vă rugăm să răspundeți la toate întrebările înainte de a trimite formularul.");
                }
            });
        });
    </script>
