
@model FinalWebTODO.Models.UserLogin

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/_LayoutLogin.cshtml";
}

<div class="signinform">
    <h1>Service Register Form</h1>
    <!-- container -->
    <div class="container">
        <!-- main content -->
        <div class="w3_info" style="background-color: rgb( 50, 50, 50); border-radius: 25px;">
            <h2 style="color: mediumpurple">Register</h2>
            @Html.ValidationSummary(true)
            @using (Html.BeginForm("Register", "Register", FormMethod.Post, new { id = "RegisterForm" }))
            {
                @Html.AntiForgeryToken()

                <form action="/" id="registerForm" method="post">
                    <div class="input-group">
                        @Html.LabelFor(m => m.Credential, new { @class = "control-label"})
                        @Html.TextBoxFor(m => m.Credential, new
                   {
                       placeHolder = "example@gmail.com",
                       title = "Please ener your email",
                       //    value = "",
                       name = "Username",
                       //id = "username",
                       @class = "form-control"
                   })
                        <span><i class="fas fa-user" aria-hidden="true"></i></span>
                    </div>
                    <div class="input-group">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Password, new
                   {
                       @class = "form-control",
                       type = "Password",
                       title = "Please enter your password",
                       placeHolder = "",
                      // value = "",
                     //  name = "password",
                       //id = "password"
                   })
                        <span><i class="fas fa-user" aria-hidden="true"></i></span>
                    </div>
                    <div style="display: flex; margin-bottom: 25px;">
                        <li class="btn btn-primary btn-block" style="padding-top: 10px; width: 100px; padding-left: 25px">
                            <a class="nav-link" href="@Url.Action("Index", "Login")">Login</a>
                        </li>
                        <button class="btn btn-primary btn-block" style="width: 150px;">Register</button>
                    </div>
                </form>
            }


        </div>
        <!-- //main content -->
    </div>
    <!-- //container -->
</div>

@section Scripts{
    <script type="text/javascript">
        $(function () {
            $("#RegisterForm").validate({
                rules: {
                    Username: {
                        required: true
                    },
                    Password: {
                        required: true
                    }
                },
                submitHandler: function (form) {
                    form.submit();
                },
                errorPlacement: function (error, element) {
                    $(element)
                        .closest("form")
                        .find("label[fore'" + element.attr("id']")
                        .append(error)
                            },
                errorElement: "span"
            });
        });
    </script>
}