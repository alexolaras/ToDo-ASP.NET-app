
@{
    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessage = TempData["ErrorMessage"] as string;
}


<!DOCTYPE html>

<html>
<head>
    <title>TODO Login</title>

    <script type="text/javascript">
        document.addEventListener("DOMContentLoaded", function() {
            var successMessage = '@successMessage';
            if (successMessage) {
                alert(successMessage);
            }
        });
    </script>
    <script type="text/javascript">
        document.addEventListener("DOMContentLoaded", function () {
            var errorMessage = '@errorMessage';
            if (errorMessage) { 
                alert(errorMessage);
            }
        })
    </script>

    <!-- Meta tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <!-- Google fonts -->
    <link href="//fonts.googleapis.com/css?family=Kumbh+Sans:wght@300;400;700&display=swap" rel="stylesheet">

    <!-- CSS Stylesheet -->
    <link rel="stylesheet" href="css/style.css" type="text/css" media="all" />

    <link rel="stylesheet" href="css/Eu.css" type="text/css" media="all" />



    @if (IsSectionDefined("Styles"))
    {
        @RenderSection("Styles", required: false)
    }

    @using System.Web.Optimization
    @Styles.Render("~/assets/css")
</head>
<body>
    <section style="height: 200px" class="w3l-about-breadcrumb">
        <div style="display: flex; text-align: center" class="breadcrumb-bg breadcrumb-bg-about py-sm-5 pt-5 pb-4">
            <div style="text-align: start; margin-left: 40px">
                <h2 style="margin: 0; padding: 0" class="title">Crează un Todo</h2>
                <div class="breadcrumbs-custom-path mt-2">
                    <a style="color: rgb(212, 34, 94)">Împreună ♡</a>
                </div>
            </div>
            <div style="align-items: center; display: flex; width: 75%; margin: 25px; padding: 25px; font-family: Cursive; font-size: 20px">
                <li class="nav-item" style="width: 20%;">
                    <a href="@Url.Action("Login", "Home")">Pagina Principala</a>
                </li>
                <li class="nav-item H1" style="width: 20%; padding-top: 10px;">
                    <a href="@Url.Action("CreazaTodo", "Home")">Creaza</a>
                </li>
                <li class="nav-item H1" style="width: 20%; padding-top: 10px;">
                    <a href="@Url.Action("TodoList", "Home")">Liste</a>
                </li>
                <!--<li class="nav-item H1" style="width: 20%; padding-top: 10px;">
        <a href="@Url.Action("CreateList", "Home")">Doar Liste</a>
    </li>-->
            </div>
        </div>
    </section>

    <div>
        @RenderBody()
    </div>

    @Scripts.Render("~/assets/js")

    <script src="js/fontawesome.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
