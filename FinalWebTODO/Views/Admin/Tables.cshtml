@{
    ViewBag.Title = "Profile";
}

@model List<FinalWebTODO.Domain.Entities.User.UserMinimal>


<style>
    #editButton {
        width: 100px;
        height: 35px;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        border: none;
        border-radius: 4px;
        overflow: hidden;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.164);
        cursor: pointer;
        background-color: aquamarine;
        transition: background-color 0.3s ease;
    }

        #editButton:hover {
            background-color: cadetblue;
        }

    .delete-button {
        width: 100px;
        height: 35px;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        border: none;
        border-radius: 4px;
        overflow: hidden;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.164);
        cursor: pointer;
        background-color: orangered;
        transition: background-color 0.3s ease;
    }

        .delete-button:hover {
            background-color: brown;
        }

    #activityButton {
        width: 100px;
        height: 35px;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        border: none;
        border-radius: 4px;
        overflow: hidden;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.164);
        cursor: pointer;
        background-color: springgreen;
        transition: background-color 0.3s ease;
    }

        #activityButton:hover {
            background-color: brown;
        }
</style>

<script>
    function confirmDelete(userId) {
        if (confirm("Are you sure you want to delete this user?")) {
            document.getElementById("deleteForm_" + userId).submit();
        }
    }
</script>


<div class="container-fluid">

    <!-- Sidebar -->
    <div class="row">

        <!-- User Table -->
        <div class="col-md-9">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Users</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Last login</th>
                                    <th>Last IP</th>
                                    <th>Level</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>@user.Id</td>
                                        <td>@user.Username</td>
                                        <td>@user.Email</td>
                                        <td>@user.LastLogin</td>
                                        <td>@user.LastIp</td>
                                        <td>@user.level</td>
                                        <td>
                                            <button onclick="location.href='@Url.Action("EditUserInfo", "Admin", new { id = user.Id })'" class="edit" , id="editButton">Edit</button>
                                        </td>
                                        <td>
                                            <form id="deleteForm_@user.Id" action="@Url.Action("DeleteUser", "Admin", new { id = user.Id })" method="post">
                                                @Html.AntiForgeryToken()
                                                <button type="button" class="delete-button" onclick="confirmDelete(@user.Id)">Delete</button>
                                            </form>

                                        </td>
                                  
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>