@{
    ViewBag.Title = "EditUserInfo";
}
@model FinalWebTODO.Domain.Entities.User.UserMinimal

<h2>EditUserInfo</h2>

<section>
    <div>

        @using (Html.BeginForm("EditUserInfo", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary()

            <label for="Username">Name</label>
            @Html.TextBoxFor(m => m.Username)
            @Html.ValidationMessageFor(m => m.Username)
            <label for="Email">Email</label>
            @Html.TextBoxFor(m => m.Email)
            @Html.ValidationMessageFor(m => m.Email)
            <label for="Level">Level</label>
            @Html.DropDownListFor(m => m.level, new SelectList(new[]
            {
                new SelectListItem { Text = "Admin", Value = "Admin" },
                new SelectListItem { Text = "User", Value = "User" },
            }, "Value", "Text"), new { @class = "dropdown" })

            <button type="submit" class="accept">Edit</button>
            <button type="button" onclick="location.href='@Url.Action("Tables","Admin")'" class="cancel">Cancel</button>

        }

    </div>
</section>